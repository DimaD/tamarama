- offers = data["offers"]
- if offers.empty?
  .alert.alert-info
    .no_offers
      No offers
- else
  - offers.each do |offer|
    .offer
      .title= offer["title"]
      .payout= offer["payout"]
      - lowres_thumbnail_url = (offer["thumbnail"] || {})["lowres"]

      %img{src: lowres_thumbnail_url, style: "width: 60px; height: 60px;"}